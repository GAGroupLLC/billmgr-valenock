<?xml version="1.0" encoding="UTF-8"?>
<mgrdata>
  <plugin name="pmvalenock">
    <group>payment_method</group>
    <author>GlobalArtGroup LLC</author>
    <params>
      <priority lang="ru">800</priority>
      <priority lang="en">500</priority>
    </params>
  </plugin>
  <metadata name="paymethod.edit.valenock" type="form">
    <form>
      <page name="methodprops">
        <field name="vl_merchant_id">
          <input type="text" name="vl_merchant_id" required="yes"/>
        </field>
        <field name="vl_secret_key">
          <input type="text" name="vl_secret_key" private="yes" required="yes"/>
        </field>
      </page>
    </form>
  </metadata>
  <lang name="ru">  
    <messages name="plugin">
      <msg name="desc_short_pmvalenock">Валенок</msg>
      <msg name="desc_full_pmvalenock">Интеграция с Валенок</msg>
      <msg name="price_pmvalenock">Бесплатно</msg>
    </messages>
    <messages name="label_paymethod">
      <msg name="pmvalenock">Валенок</msg>
      <msg name="module_pmvalenock">Валенок</msg>
    </messages>
    <messages name="paymethod.edit.valenock">
      <msg name="vl_merchant_id">Идентификатор магазина</msg>
      <msg name="hint_vl_merchant_id">Идентификатор магазина в Валенке.</msg>
      <msg name="vl_secret_key">Секретный ключ</msg>
      <msg name="hint_vl_secret_key">Секретный ключ магазина в Валенке.</msg>
    </messages>
  </lang>
  
  <lang name="en">
    <messages name="plugin">
      <msg name="desc_short_pmvalenock">Valenock</msg>
      <msg name="desc_full_pmvalenock">Valenock integration</msg>
      <msg name="price_pmvalenock">Free</msg>
    </messages>
    <messages name="label_paymethod">
      <msg name="pmvalenock">Valenock</msg>
      <msg name="module_pmvalenock">Valenock</msg>
    </messages>
    <messages name="paymethod.edit.valenock">
      <msg name="vl_merchant_id">Merchant identifier</msg>
      <msg name="hint_vl_merchant_id">Merchant id in valenock.</msg>
      <msg name="vl_secret_key">Merchant secret key</msg>
      <msg name="hint_vl_secret_key">Secret key in valenock.</msg>
    </messages>
  </lang>
</mgrdata>
